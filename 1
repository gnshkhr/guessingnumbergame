        $count=0;
    }
      $num= mt_rand(0,1000);
      if(isset($_POST['btnsubmit'])){
        
       
        ++$count;

      
      $num1=$_POST['num1'];
      if( $num > $num1 ){
    
       // echo  " OOPS TOO CLOSE!! Your guess is Wrong ".$count. "TRY some SMALLER Number!!";
        $err = " OOPS TOO CLOSE!! Your guess is Wrong ".$count. "TRY some SMALLER Number!!";

      }
        else if( $num < $num1 ){

        
        //echo "OOPS TOO CLOSE!! Your guess is Wrong " .$count." TRY some Greater Number!!";
        $err="OOPS TOO CLOSE!! Your guess is Wrong " .$count." TRY some Greater Number!!";

        }
    
    else{
          //  echo  " WELL DONE YOU ARE THE WINNER!!" .$count." Your guess is Correct!!!";
         $err= " WELL DONE YOU ARE THE WINNER!!" .$count." Your guess is Correct!!!";
        }
        
    }  

   

    if($count==5){
       // echo "GAME OVER!!  Better Luck Next Time!!";
      $err= " GAME OVER!!   Better Luck Next Time!!";
    }
         
      
     




    ?>   
